{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node", "hardhat"]  // ✅ Add "hardhat" here
  },
  "include": [
    "scripts/**/*",
    "frontend/src/**/*",
    "hardhat.config.ts"            // ✅ Optional: add if using TypeScript config
  ],
  "exclude": ["node_modules"]
}
